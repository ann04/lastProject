<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="basketsSql">
<typeAlias alias="BasketVo" type="com.basket.vo.BasketVo" />

<!-- list -->
<select id="listData" resultClass="BasketVo">
select *from  basket
</select>

<!-- insert -->
<insert id="insertdata" parameterClass="BasketVo">
insert into basket
values(#productName#,#color#,#numbers#,#price#,to_char(sysdate,'yyyy-mm-dd'))
</insert>

<!-- count -->
<select id="countData" resultClass="int">
select count(*) from basket
</select>


</sqlMap>